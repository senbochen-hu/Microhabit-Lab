.page-container {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.header-card {
	background: white;
	border-radius: 24rpx;
	padding: 28rpx;
	box-shadow: 0 2rpx 16rpx rgba(15, 23, 42, 0.06);
}

.title {
	font-size: 40rpx;
	font-weight: 700;
	margin-bottom: 16rpx;
}

.meta {
	display: flex;
	flex-wrap: wrap;
	gap: 12rpx;
	margin-bottom: 12rpx;
}

.tag {
	background: #f4f6f8;
	color: var(--text-secondary);
	padding: 8rpx 16rpx;
	border-radius: 16rpx;
	font-size: 24rpx;
}

.desc {
	font-size: 28rpx;
	color: var(--text-secondary);
	line-height: 1.5;
}

.stats-grid {
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	gap: 16rpx;
}

.stat-card {
	background: white;
	border-radius: 24rpx;
	padding: 20rpx;
	text-align: center;
	box-shadow: 0 2rpx 16rpx rgba(15, 23, 42, 0.06);
	transition: all 0.3s;
}

.stat-card:active {
	transform: scale(0.98);
}

.stat-value {
	font-size: 36rpx;
	font-weight: 700;
	color: var(--primary-color);
	margin-bottom: 8rpx;
}

.stat-label {
	font-size: 24rpx;
	color: var(--text-tertiary);
}

.progress-card {
	background: white;
	border-radius: 24rpx;
	padding: 24rpx;
	box-shadow: 0 2rpx 16rpx rgba(15, 23, 42, 0.06);
}

.progress-text {
	font-size: 28rpx;
	color: var(--text-secondary);
	margin-bottom: 12rpx;
}

.progress-bar {
	width: 100%;
	height: 16rpx;
	background: #f0f2f5;
	border-radius: 16rpx;
	overflow: hidden;
}

.progress-inner {
	height: 100%;
	background: linear-gradient(135deg, #4CB8A5 0%, #4C9BFF 100%);
	border-radius: 16rpx;
	transition: width 0.3s ease;
}

.calendar-card {
	background: white;
	border-radius: 24rpx;
	padding: 24rpx;
	box-shadow: 0 2rpx 16rpx rgba(15, 23, 42, 0.06);
}

.section-title {
	font-size: 30rpx;
	font-weight: 600;
	margin-bottom: 16rpx;
}

.calendar-grid {
	display: grid;
	grid-template-columns: repeat(7, 1fr);
	gap: 8rpx;
}

.calendar-cell {
	height: 72rpx;
	border-radius: 16rpx;
	background: #f7f8fa;
	display: flex;
	align-items: center;
	justify-content: center;
	color: var(--text-secondary);
	font-size: 28rpx;
	border: 1rpx solid #edf0f3;
	font-weight: 500;
}

.calendar-cell.done {
	background: #e4f7f1;
	color: #1b8f6d;
	border-color: #c6ecdf;
}

.calendar-cell.today {
	border: 2rpx solid #4CB8A5;
	box-shadow: 0 0 0 2rpx rgba(76, 184, 165, 0.2);
}

.legend {
	display: flex;
	gap: 24rpx;
	margin-top: 16rpx;
	color: var(--text-tertiary);
	font-size: 24rpx;
}

.legend-item {
	display: flex;
	align-items: center;
	gap: 8rpx;
}

.legend-dot {
	width: 24rpx;
	height: 24rpx;
	border-radius: 12rpx;
	background: #f7f8fa;
	border: 1rpx solid #edf0f3;
}

.legend-dot.done { background: #e4f7f1; border-color: #c6ecdf; }
.legend-dot.today { background: #dff3ef; border-color: #4CB8A5; }

.advice-card {
	background: white;
	border-radius: 24rpx;
	padding: 24rpx;
	box-shadow: 0 2rpx 16rpx rgba(15, 23, 42, 0.06);
}

.advice-text {
	font-size: 28rpx;
	color: var(--text-secondary);
	line-height: 1.6;
}

.loading {
	padding: 64rpx;
	text-align: center;
	color: var(--text-secondary);
}

/* 日期详情弹窗 */
.modal-mask {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: rgba(0, 0, 0, 0.5);
	display: flex;
	align-items: flex-end;
	z-index: 999;
	animation: slideIn 0.3s ease-out;
}

.date-modal {
	background: white;
	border-radius: 24rpx 24rpx 0 0;
	padding: 32rpx;
	width: 100%;
	box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.1);
	animation: slideUp 0.3s ease-out;
}

.modal-date {
	font-size: 36rpx;
	font-weight: 700;
	color: var(--text-primary);
	margin-bottom: 24rpx;
	text-align: center;
}

.modal-completion {
	display: flex;
	flex-direction: column;
	gap: 16rpx;
	margin-bottom: 32rpx;
	background: #f7f8fa;
	border-radius: 16rpx;
	padding: 20rpx;
}

.completion-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.completion-label {
	font-size: 28rpx;
	color: var(--text-secondary);
}

.completion-value {
	font-size: 28rpx;
	font-weight: 600;
	color: var(--primary-color);
}

.date-modal .btn {
	width: 100%;
	margin-top: 16rpx;
}

@keyframes slideUp {
	from {
		transform: translateY(100%);
		opacity: 0;
	}
	to {
		transform: translateY(0);
		opacity: 1;
	}
}

@keyframes slideIn {
	from {
		opacity: 0;
	}
	to {
		opacity: 1;
	}
}

