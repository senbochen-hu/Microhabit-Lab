/* 新建习惯页样式 */

.page-container {
  padding: 32rpx;
  min-height: 100vh;
}

/* 头部 */
.header {
  margin-bottom: 48rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-tertiary);
}

/* 表单 */
.form {
  margin-bottom: 120rpx;
}

.form-item {
  margin-bottom: 48rpx;
}

.form-label {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.form-input {
  width: 100%;
  height: 96rpx;
  background: white;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: var(--text-primary);
  border: 2rpx solid var(--border-color);
  transition: all 0.3s;
}

.form-input:focus {
  border-color: var(--primary-color);
}

.form-hint {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 16rpx;
  font-size: 24rpx;
  line-height: 1.5;
}

.char-count {
  color: var(--text-tertiary);
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 触发器选项 */
.trigger-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.trigger-btn {
  padding: 20rpx 32rpx;
  background: white;
  border: 2rpx solid var(--border-color);
  border-radius: 999rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  transition: all 0.3s;
}

.trigger-btn.active {
  background: var(--primary-color);
  border-color: var(--primary-color);
  color: white;
}

.trigger-btn:active {
  transform: scale(0.95);
}

/* 频次选项 */
.frequency-options {
  display: flex;
  gap: 24rpx;
}

.frequency-btn {
  flex: 1;
  padding: 32rpx 24rpx;
  background: white;
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s;
}

.frequency-btn.active {
  background: var(--primary-bg);
  border-color: var(--primary-color);
}

.frequency-main {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.frequency-btn.active .frequency-main {
  color: var(--primary-color);
}

.frequency-sub {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.frequency-btn.active .frequency-sub {
  color: var(--primary-color);
}

/* 底部操作按钮 */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: white;
  border-top: 2rpx solid var(--border-light);
  display: flex;
  gap: 24rpx;
  z-index: 100;
}

.footer-actions .btn {
  flex: 1;
}
