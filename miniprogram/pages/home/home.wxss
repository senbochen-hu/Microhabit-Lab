/* 今日习惯页样式 */

.container {
  min-height: 100vh;
  padding-bottom: 160rpx;
}

/* 顶部区域 */
.header {
  padding: 48rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #F7F8FA 0%, #FFFFFF 100%);
}

.date {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.encouragement {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 习惯列表 */
.habits-container {
  padding: 0 32rpx;
}

.habit-card {
  background: white;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 16rpx rgba(15, 23, 42, 0.06);
  transition: all 0.3s;
}

.habit-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(15, 23, 42, 0.1);
}

.habit-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 左侧完成图标 */
.check-icon {
  width: 52rpx;
  height: 52rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon image {
  width: 100%;
  height: 100%;
}

.check-placeholder {
  width: 52rpx;
  height: 52rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

/* 中间习惯信息 */
.habit-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.habit-name {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.2;
}

.habit-name.completed {
  color: var(--text-tertiary);
  text-decoration: line-through;
}

.habit-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
}

.trigger-tag {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background: var(--primary-bg);
  color: var(--primary-color);
}

.progress-text {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* 右侧打卡按钮 */
.check-in-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 24rpx;
  transition: all 0.2s;
  flex-shrink: 0;
}

.check-in-btn image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.check-in-btn:active:not(.disabled) {
  transform: scale(0.9);
}

.check-in-btn.disabled {
  opacity: 0.5;
}

.check-in-btn.loading {
  opacity: 0.7;
}

.btn-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(76, 184, 165, 0.3);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 全部完成提示 */
.completed-banner {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  color: white;
  padding: 20rpx 32rpx;
  margin: 16rpx 32rpx 0;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  animation: slideDown 0.3s ease;
}

.completed-icon {
  font-size: 36rpx;
}

.completed-text {
  font-size: 28rpx;
  font-weight: 500;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载状态 */
.loading-state {
  padding: 120rpx 32rpx;
  text-align: center;
}

.spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f0f2f5;
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 错误状态 */
.error-state {
  padding: 120rpx 32rpx;
  text-align: center;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.empty-sub {
  font-size: 28rpx;
  color: var(--text-tertiary);
  margin-bottom: 48rpx;
}

/* 周期结束弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal-content {
  width: 600rpx;
  background: white;
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  margin: 0 32rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  text-align: center;
  margin-bottom: 16rpx;
}

.modal-habit-name {
  font-size: 28rpx;
  color: var(--primary-color);
  text-align: center;
  margin-bottom: 24rpx;
}

.modal-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  text-align: center;
  margin-bottom: 48rpx;
}

.modal-text .highlight {
  color: var(--primary-color);
  font-weight: 600;
}

.modal-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 悬浮新建按钮 */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: var(--primary-color);
  box-shadow: 0 8rpx 24rpx rgba(76, 184, 165, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  transition: all 0.3s;
}

.fab:active {
  transform: scale(0.9);
}

.fab image {
  width: 48rpx;
  height: 48rpx;
}
